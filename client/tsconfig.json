{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": true,
        "skipDefaultLibCheck": true,
        "moduleResolution": "nodenext"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}